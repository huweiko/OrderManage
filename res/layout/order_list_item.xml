<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_tab_background"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="10dp" >

    <LinearLayout
        android:id="@+id/LinearLayoutOrderList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_list_txt_background"
        android:gravity="center_vertical"
        android:paddingBottom="0dp"
        android:orientation="horizontal" 
        android:visibility="gone">
       	<CheckBox
            android:id="@+id/CheckBoxSelectAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:checked="true"
            style="@style/MyCheckBox"/>
        <TextView
            android:id="@+id/TextViewOrderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingBottom="8.5dp"
            android:paddingTop="8dp"
            android:text="材料"
            android:textColor="#666666"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/TextViewOrderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="8.5dp"
            android:paddingTop="8dp"
            android:text="0.0"
            android:textColor="#666666"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/TextViewOrderNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:paddingBottom="8.5dp"
            android:paddingTop="8dp"
            android:layout_marginRight="5dp"
            android:text="x1"
            android:textColor="#666666"
            android:textSize="17sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayoutOrderListEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_list_txt_background"
        android:gravity="center_vertical"
        android:paddingBottom="0dp"
        android:orientation="horizontal" 
        android:visibility="visible">
       	<Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:checked="true"
            android:text="-"
            android:background="@drawable/login_activity_checkbox_pic"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="1"
            android:textColor="#666666"
            android:textSize="17sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:checked="true"
            android:text="+"
            android:background="@drawable/login_activity_checkbox_pic"/>
        <TextView
            android:id="@+id/TextViewOrderEditPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="8.5dp"
            android:paddingTop="8dp"
            android:text="0.0"
            android:textColor="#666666"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/TextViewOrderNum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="8.5dp"
            android:paddingTop="8dp"
            android:text="删除"
            android:background="@drawable/login_btn_bg"
            android:textColor="#666666"
            android:textSize="17sp" />

    </LinearLayout>
	
</RelativeLayout>